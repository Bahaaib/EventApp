<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="6dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/order_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/colorInactive" />

        <TextView
            android:id="@+id/order_purchase_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_label"
            android:text="Ordered: Sat, Apr 11"
            android:textColor="@color/colorWhite"
            android:elevation="6dp"/>

        <TextView
            android:id="@+id/order_events_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:text="Fri, Apr 19"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_events_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:gravity="center"
            android:maxLength="110"
            android:padding="8dp"
            android:text="Codemotion Amsterdam Lorem ipsum dolor sit amet, consectetur adipisicing elit"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <ir.beigirad.zigzagview.ZigzagView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:elevation="6dp"
            card_view:zigzagBackgroundColor="@color/colorWhite"
            card_view:zigzagHeight="10dp"
            card_view:zigzagSides="top">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/order_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:drawableEnd="@drawable/ic_check"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="CONFIRMED"
                    android:textColor="@color/colorGreen"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/order_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:drawableEnd="@drawable/ic_pending"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="PENDING"
                    android:textColor="@color/colorInactive"
                    android:textSize="24sp"
                    android:visibility="invisible" />


            </RelativeLayout>


        </ir.beigirad.zigzagview.ZigzagView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>