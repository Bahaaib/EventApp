<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nearby_events_card"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginStart="6dp"
    android:layout_marginBottom="6dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/nearby_events_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:alpha="0.8"
                android:background="@color/colorInactive" />

            <TextView
                android:id="@+id/nearby_events_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Fri, Apr 19"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nearby_events_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:maxLength="110"
                android:padding="3dp"
                android:text="Codemotion Amsterdam Lorem ipsum dolor sit amet, consectetur adipisicing elit"
                android:textColor="@color/colorWhite" />


        </RelativeLayout>

        <TextView
            android:id="@+id/nearby_events_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorInactive"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>